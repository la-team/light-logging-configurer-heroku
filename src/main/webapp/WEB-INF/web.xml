<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0" metadata-complete="false">

    <display-name>Light Logging Configurer</display-name>

    <description>Pluggable Java web library for runtime logging level configuration: quick and easy</description>

    <context-param>
        <param-name>light:configurer:base-url</param-name>
        <param-value>/</param-value>
    </context-param>

    <context-param>
        <param-name>light:configurer:demo-mode</param-name>
        <param-value>true</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>

</web-app>